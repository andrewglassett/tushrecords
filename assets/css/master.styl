@import '_settings'

normalize-css()
base()

*
  box-sizing: border-box

img
  max-width: 100%

#modal
  display: none
  width: 65%
  background: #fff
  border-radius: 0px
  box-shadow: 0 0 10px #000

a.close-modal
  display: none

header
  background: tomato
  position: fixed
  width: 100%
  nav
    padding: 20px  
    ul
      inline-list(spacing = 2em)
      float: right

footer
  padding: 20px
  height: 50px
  margin-top: 20px   
  background: grey
  ul  
    inline-list(spacing = 2em)
    float: left

  

#home
  padding-top: 75px

  .release
    center()
    margin-bottom: 2em
    background: papayawhip

    .pic
      col(1/3)
      background: green
      +below(700px)
        col()

    .text
      col(1/3)
      padding-top:10%
      +below(700px)
        col()
    .player
      +below(700px)
        col()


#team
  padding-top: 50px
  .member
    center()
    background: grey

    .pic
      col(1/2)
    .description
      col(1/2)
